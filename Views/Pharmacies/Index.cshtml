@model IEnumerable<NewWebApplicationProject.Models.Pharmacy>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@foreach (var pharmacy in Model)
{
    <tr>
        <td>@pharmacy.PharmacyName</td>
        <td>@pharmacy.Address</td>
        <td>
            <a asp-controller="Pharmacies" asp-action="ViewAnalytics" asp-route-id="@pharmacy.PharmacyId" class="btn btn-info">
                View Analytics
            </a>
        </td>
    </tr>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PharmacyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVerified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PharmacyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVerified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.PharmacyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PharmacyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PharmacyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
