@model IEnumerable<NewWebApplicationProject.Models.Pharmacy>
@{
    ViewData["Title"] = "Pharmacies";
}

<div class="card bg-success bg-opacity-75 text-white mb-4">
    <div class="card-body">
        <h2 class="display-4">Registered Pharmacies</h2>
    </div>
</div>

<div class="card">
    <div class="card-header bg-success bg-opacity-25">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Pharmacy List</h4>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Pharmacy
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="bg-success bg-opacity-25">
                    <tr>
                        <th>Pharmacy Name</th>
                        <th>License Number</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PharmacyName</td>
                            <td>@item.LicenseNumber</td>
                            <td>@item.Address</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.IsVerified)
                                {
                                    <span class="badge bg-success">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="ViewAnalytics" asp-route-id="@item.PharmacyId"
                                       class="btn btn-success btn-sm me-2">
                                        <i class="bi bi-graph-up"></i> Analytics
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.PharmacyId"
                                       class="btn btn-outline-success btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PharmacyId"
                                       class="btn btn-outline-success btn-sm me-2">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PharmacyId"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>