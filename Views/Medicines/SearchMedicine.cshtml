@model IEnumerable<NewWebApplicationProject.Models.Pharmacy>

@{
    ViewData["Title"] = "Search Medicine";
}

<h1>Search Medicine</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="SearchMedicine" method="get">
            <div class="input-group">
                <input type="text" class="form-control" name="medicineName"
                       placeholder="Enter medicine name to search"
                       value="@ViewData["SearchTerm"]"
                       aria-label="Medicine Name">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>
    </div>
</div>

@if (ViewData["SearchTerm"] != null)
{
    if (Model.Any())
    {
        <h4>Pharmacies with "@ViewData["SearchTerm"]" in stock:</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pharmacy Name</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                    <th>Available Quantity</th>
                    <th>Action</th> <!-- New column for the Purchase button -->
                </tr>
            </thead>
            <tbody>
                @foreach (var pharmacy in Model)
                {
                    // Filter inventory for the current pharmacy
                    var filteredInventory = pharmacy.Inventory
                    ?.Where(i => i.Medicine.Name
                    .Contains(ViewData["SearchTerm"].ToString(), StringComparison.OrdinalIgnoreCase)
                    && i.Quantity > 0)
                    .ToList();

                    if (filteredInventory != null && filteredInventory.Any())
                    {
                        foreach (var item in filteredInventory)
                        {
                            <tr>
                                <td>@pharmacy.PharmacyName</td>
                                <td>@pharmacy.Address</td>
                                <td>@pharmacy.PhoneNumber</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <form asp-controller="Purchases" asp-action="Create" method="get">
                                        <input type="hidden" name="pharmacyId" value="@pharmacy.PharmacyId" />
                                        <input type="hidden" name="medicineId" value="@item.MedicineId" />
                                        <button class="btn btn-success" type="submit">Purchase</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>@pharmacy.PharmacyName</td>
                            <td>@pharmacy.Address</td>
                            <td>@pharmacy.PhoneNumber</td>
                            <td>Not Available</td>
                            <td>
                                <button class="btn btn-secondary" disabled>Unavailable</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No pharmacies found with "@ViewData["SearchTerm"]" in stock.
        </div>
    }
}
