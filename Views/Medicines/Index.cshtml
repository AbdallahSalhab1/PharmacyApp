@model IEnumerable<NewWebApplicationProject.Models.Medicine>
@{
    ViewData["Title"] = "Medicines Catalog";
}

<div class="card bg-success bg-opacity-75 text-white mb-4">
    <div class="card-body">
        <h2 class="display-4">Medicines Catalog</h2>
    </div>
</div>

<div class="card">
    <div class="card-header bg-success bg-opacity-25">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">All Medicines</h4>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Medicine
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="bg-success bg-opacity-25">
                    <tr>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Form</th>
                        <th>Strength</th>
                        <th>Manufacturer</th>
                        <th>Prescription</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Brand</td>
                            <td>@item.DosageForm</td>
                            <td>@item.Strength</td>
                            <td>@item.Manufacturer</td>
                            <td>
                                @if (item.RequiresPrescription)
                                {
                                    <span class="badge bg-warning">Required</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">OTC</span>
                                }
                            </td>
                            <td>$@item.Price.ToString("F2")</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.MedicineId"
                                       class="btn btn-success btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MedicineId"
                                       class="btn btn-outline-success btn-sm me-2">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MedicineId"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>