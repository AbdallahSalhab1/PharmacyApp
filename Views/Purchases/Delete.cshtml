@model NewWebApplicationProject.Models.Purchase
@{
    ViewData["Title"] = "Delete Purchase";
}

<div class="card bg-success bg-opacity-75 text-white mb-4">
    <div class="card-body">
        <h2 class="display-4">Delete Purchase</h2>
        <p class="lead">Are you sure you want to delete this purchase?</p>
    </div>
</div>

<div class="card bg-success bg-opacity-10">
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th class="bg-success bg-opacity-25" style="width: 200px;">Patient Name</th>
                        <td>@Model.Patient?.Name</td>
                    </tr>
                    <tr>
                        <th class="bg-success bg-opacity-25">Medicine</th>
                        <td>@Model.Medicine?.Name</td>
                    </tr>
                    <tr>
                        <th class="bg-success bg-opacity-25">Quantity</th>
                        <td>@Model.Quantity</td>
                    </tr>
                    <tr>
                        <th class="bg-success bg-opacity-25">Purchase Date</th>
                        <td>@Model.PurchaseDate.ToString("g")</td>
                    </tr>
                    <tr>
                        <th class="bg-success bg-opacity-25">Status</th>
                        <td>
                            @if (Model.IsReceived)
                            {
                                <span class="badge bg-success">Received</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                        </td>
                    </tr>
                </table>

                <div class="alert alert-danger mt-4">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    Warning: This action cannot be undone!
                </div>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="PurchaseId" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete Purchase
                    </button>
                    <a asp-action="Index" class="btn btn-outline-success">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>