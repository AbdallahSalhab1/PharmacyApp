@model NewWebApplicationProject.Models.Purchase
@{
    ViewData["Title"] = "Edit Purchase";
}

<div class="card bg-success bg-opacity-75 text-white mb-4">
    <div class="card-body">
        <h2 class="display-4">Edit Purchase</h2>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-success bg-opacity-10">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="PurchaseId" />
                    <input type="hidden" asp-for="PharmacyId" />
                    <input type="hidden" asp-for="PatientId" />
                    <input type="hidden" asp-for="MedicineId" />
                    <input type="hidden" asp-for="PurchaseDate" />

                    <div class="form-group mb-3">
                        <label class="form-label text-success">Patient</label>
                        <input type="text" class="form-control" value="@ViewBag.PatientName" disabled />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label text-success">Medicine</label>
                        <input type="text" class="form-control" value="@ViewBag.MedicineName" disabled />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="form-label text-success">Quantity</label>
                        <input asp-for="Quantity" class="form-control border-success" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-4">
                        <input class="form-check-input" asp-for="IsReceived" />
                        <label class="form-check-label text-success" asp-for="IsReceived">
                            Mark as Received
                        </label>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-lg"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-success">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}