@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="container mt-4">
        <h2 class="mb-4">Admin Dashboard</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Patients</h5>
                        <p class="card-text">Manage patient records and information</p>
                        <a class="btn btn-primary" href="/Patients/Index">View Patient</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Pharmacies</h5>
                        <p class="card-text">Manage pharmacies details</p>
                        <a class="btn btn-primary" href="/Pharmacies/Index">View Pharmacies</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Purchases</h5>
                        <p class="card-text">View and manage medicine purchases</p>
                        <a class="btn btn-primary" href="/Purchases/Index">View Purchases</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Medicines</h5>
                        <p class="card-text">Manage medicine details</p>
                        <a class="btn btn-primary" href="/Medicines/Index">View Medicines</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (User.IsInRole("Patient"))
{
    <div class="card bg-success bg-opacity-75 text-white mb-4">
        <div class="card-body">
            <h2 class="display-4">Patient Dashboard</h2>
            <p class="lead mb-0">Welcome @ViewData["PatientName"]</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card bg-success bg-opacity-10 mb-4">
                <div class="card-body text-center py-5">
                    <i class="bi bi-search display-1 text-success"></i>
                    <h2 class="mb-3">Purchase Medicine</h2>
                    <p class="text-muted mb-4">Search and purchase medicines from available pharmacies</p>
                    <a asp-controller="Medicines" asp-action="SearchMedicine" class="btn btn-success">
                        <i class="bi bi-search"></i> Search Medicines
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-success bg-opacity-10 mb-4">
                <div class="card-body text-center py-5">
                    <i class="bi bi-clock-history display-1 text-success"></i>
                    <h2 class="mb-3">Purchase History</h2>
                    <p class="text-muted mb-4">View your past purchases and reorder medicines</p>
                    <a asp-controller="Purchases" asp-action="History" class="btn btn-success">
                        <i class="bi bi-clock"></i> View History
                    </a>
                </div>
            </div>
        </div>
    </div>
}