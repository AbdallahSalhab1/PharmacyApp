@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="container mt-4">
        <h2 class="mb-4">Admin Dashboard</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Patients</h5>
                        <p class="card-text">Manage patient records and information</p>
                        <a class="btn btn-primary" href="/Patients/Index">View Patient</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Pharmacies</h5>
                        <p class="card-text">Manage pharmacies details</p>
                        <a class="btn btn-primary" href="/Pharmacies/Index">View Pharmacies</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Purchases</h5>
                        <p class="card-text">View and manage medicine purchases</p>
                        <a class="btn btn-primary" href="/Purchases/Index">View Purchases</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Medicines</h5>
                        <p class="card-text">Manage medicine details</p>
                        <a class="btn btn-primary" href="/Medicines/Index">View Medicines</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (User.IsInRole("Pharmacy"))
{
    <div class="container mt-4">
        <h2 class="mb-4">Pharmacy Dashboard</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Inventory</h5>
                        <p class="card-text">Add and manage your inventory</p>
                        <a class="btn btn-primary" href="/Inventories/CreateForPharmacy">Add Medicine</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">My Inventory</h5>
                        <p class="card-text">View your current inventory</p>
                        <a class="btn btn-primary" href="/Inventories/PharmacyInventory">View Inventory</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Analytics</h5>
                        <p class="card-text">View pharmacy analytics</p>
                        <a class="btn btn-primary" href="/ViewAnalytics">View Analytics</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Purchases</h5>
                        <p class="card-text">View purchases by patient</p>
                        <a class="btn btn-primary" href="/Purchases/ByPatient">View Purchases</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

else if (User.IsInRole("Patient"))
{
    <div class="card bg-success bg-opacity-75 text-white mb-4">
        <div class="card-body">
            <h2 class="display-4">Patient Dashboard</h2>
            <p class="lead mb-0">Welcome @ViewData["PatientName"]</p>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100 bg-success bg-opacity-25">
                    <div class="card-body text-center">
                        <i class="bi bi-capsule display-1 text-success mb-3"></i>
                        <h5 class="card-title">Purchase Medicine</h5>
                        <p class="card-text">Search and purchase medicines from available pharmacies</p>
                        <a class="btn btn-success" href="/Medicines/SearchMedicine">
                            <i class="bi bi-search"></i> Search Medicines
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card h-100 bg-success bg-opacity-25">
                    <div class="card-body text-center">
                        <i class="bi bi-clock-history display-1 text-success mb-3"></i>
                        <h5 class="card-title">Purchase History</h5>
                        <p class="card-text">View your past purchases and reorder medicines</p>
                        <a class="btn btn-success" href="/Purchases/History">
                            <i class="bi bi-clock"></i> View History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}