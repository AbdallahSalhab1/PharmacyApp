@model NewWebApplicationProject.Models.Inventory
@{
    ViewData["Title"] = "Add Medicine to Inventory";
}

<div class="card bg-success bg-opacity-75 text-white mb-4">
    <div class="card-body">
        <h2 class="display-4">Add New Medicine</h2>
        <p class="lead mb-0">Add medicine to your pharmacy's inventory</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-success bg-opacity-10">
            <div class="card-body p-4">
                <form asp-action="CreateForPharmacy" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="MedicineId" class="form-label text-success">Select Medicine</label>
                        <select asp-for="MedicineId" class="form-select border-success" asp-items="ViewBag.MedicineId">
                            <option value="">-- Select Medicine --</option>
                        </select>
                        <span asp-validation-for="MedicineId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Quantity" class="form-label text-success">Quantity</label>
                        <input asp-for="Quantity" class="form-control border-success" min="1" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-plus-circle"></i> Add to Inventory
                        </button>
                        <a asp-action="PharmacyInventory" class="btn btn-outline-success">
                            <i class="bi bi-arrow-left"></i> Back to Inventory
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}