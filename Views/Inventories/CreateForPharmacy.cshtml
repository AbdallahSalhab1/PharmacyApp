@model NewWebApplicationProject.Models.Inventory

@{
    ViewData["Title"] = "Add Medicine to Inventory";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForPharmacy" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="MedicineId">Medicine</label>
                <select asp-for="MedicineId" class="form-control" asp-items="ViewBag.MedicineId">
                    <option value="">-- Select Medicine --</option>
                </select>
                <span asp-validation-for="MedicineId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quantity">Quantity</label>
                <input asp-for="Quantity" class="form-control" min="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Inventory" class="btn btn-primary" />
                <a asp-action="PharmacyInventory" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}