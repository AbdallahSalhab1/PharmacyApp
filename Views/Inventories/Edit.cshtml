@model NewWebApplicationProject.Models.Inventory
@{
    ViewData["Title"] = "Edit Inventory";
}

<div class="card bg-success bg-opacity-75 text-white mb-4">
    <div class="card-body">
        <h2 class="display-4">Edit Inventory</h2>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-success bg-opacity-10">
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="InventoryId" />

                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="form-label text-success">Quantity</label>
                        <input asp-for="Quantity" class="form-control border-success" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="PharmacyId" />
                    <input type="hidden" asp-for="MedicineId" />
                    <input type="hidden" asp-for="LastUpdated" value="@DateTime.Now" />

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-lg"></i> Save Changes
                        </button>
                        <a asp-action="PharmacyInventory" class="btn btn-outline-success">
                            <i class="bi bi-arrow-left"></i> Back to Inventory
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}